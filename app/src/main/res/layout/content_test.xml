<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.trojx.busdrivingtest.activity.TestActivity"
    tools:showIn="@layout/activity_test">
    <LinearLayout
        android:id="@+id/ll_accel_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_xAccel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X加速度："
            />
        <TextView
            android:id="@+id/tv_yAccel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y加速度："
            />
        <TextView
            android:id="@+id/tv_zAccel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z加速度："
            />
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lc_accel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_accel_detail">
    </com.github.mikephil.charting.charts.LineChart>
    <LinearLayout
        android:id="@+id/ll_orien_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lc_accel">
        <TextView
            android:id="@+id/tv_xOrien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X方向角："
            />
        <TextView
            android:id="@+id/tv_yOrien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y方向角："
            />
        <TextView
            android:id="@+id/tv_zOrien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z方向角："
            />
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lc_orien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_orien_detail">
    </com.github.mikephil.charting.charts.LineChart>
    <LinearLayout
        android:id="@+id/ll_map_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lc_orien">
        <TextView
            android:id="@+id/tv_Lng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="经度："
            />
        <TextView
            android:id="@+id/tv_Lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="维度："
            />
    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_map_detail"
        android:clickable="true" />

</RelativeLayout>
